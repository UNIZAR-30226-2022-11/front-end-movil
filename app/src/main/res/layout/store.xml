<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="391dp"
        android:layout_height="827dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/tienda"
                android:layout_width="255dp"
                android:layout_height="56dp"
                android:text="OUR STORE"
                android:textSize="40sp"
                android:gravity="center"
                android:layout_marginStart="60dp"/>

        <LinearLayout
            android:layout_width="391dp"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="15dp"
           >
            <TextView
                android:id="@+id/nomUser"
                android:layout_width="92dp"
                android:layout_height="22dp"
                android:textSize="20sp"
                android:text="TextView"
                android:gravity="right"
                android:layout_marginStart="190dp"/>

            <TextView
                android:id="@+id/monedas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="TextView"
                android:layout_marginLeft="10dp"
                android:gravity="right"
               />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ListGrey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <ImageView
                android:id="@+id/imagenGris"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/board_gris" />

                <Button
                    android:id="@+id/buyGris"
                    android:layout_marginStart="17dp"
                    android:layout_marginTop="30dp"
                    android:textSize="12dp"
                    android:minWidth="120dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Get: 5 coins" />
                <Button
                    android:id="@+id/equiparGris"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="17dp"
                    android:textSize="12dp"
                    android:minWidth="120dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Set default" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ListBlue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <ImageView
                android:id="@+id/imagenBlue"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/board_azul" />

            <Button
                android:id="@+id/buyBlue"
                android:layout_marginStart="22dp"
                android:layout_marginTop="30dp"
                android:textSize="12dp"
                android:minWidth="120dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Get: 5 coins" />
            <Button
                android:id="@+id/equiparBlue"
                android:layout_marginTop="30dp"
                android:textSize="12dp"
                android:minWidth="120dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set default" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ListBrown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <ImageView
                android:id="@+id/imagenBrown"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/board_marron" />

            <Button
                android:id="@+id/buyBrown"
                android:layout_marginStart="22dp"
                android:layout_marginTop="30dp"
                android:textSize="12dp"
                android:minWidth="120dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Get: 10 coins" />
            <Button
                android:id="@+id/equiparBrown"
                android:layout_marginTop="30dp"
                android:textSize="12dp"
                android:minWidth="120dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set default" />

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>