                    android:id="@+id/monedas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="right"
                    android:text="0"
                    android:textSize="20sp" />
            </LinearLayout>

            <TextView
